{
  "name": "vibe-coding-mcp",
  "version": "2.1.0",
  "description": "MCP server for automatically collecting, summarizing, documenting, and publishing vibe coding sessions",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "vibe-coding-mcp": "dist/stdio.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "stdio": "node dist/stdio.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns='integration'",
    "test:tools": "node scripts/test-tools.mjs",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "mcp",
    "vibe-coding",
    "documentation",
    "notion",
    "obsidian",
    "github-wiki",
    "claude",
    "ai-coding",
    "model-context-protocol"
  ],
  "author": "MUSE-CODE-SPACE",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MUSE-CODE-SPACE/vibe-coding-mcp.git"
  },
  "homepage": "https://github.com/MUSE-CODE-SPACE/vibe-coding-mcp#readme",
  "bugs": {
    "url": "https://github.com/MUSE-CODE-SPACE/vibe-coding-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@notionhq/client": "^2.2.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
